<h1>wines</h1>
<% @wines.each do |wine| %>
<p>name</p>
<%= link_to wine.name, wine_path(wine.id) %>
<%= attachment_image_tag wine, :image, size: "100x50" %>
<h3>いいね件数: <%= wine.likes.count %></h3>
<% if current_user.already_liked?(wine) %>
  <%= button_to 'いいねを取り消す', wine_like_path(wine,current_user.likes.find_by(wine_id:wine.id)), method: :delete %>
<% else %>
  <%= button_to 'いいね', wine_likes_path(wine) %>
<% end %>
<h2>いいねしたユーザー</h2>
<% wine.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>
<% end %>
<%= paginate @wines %>